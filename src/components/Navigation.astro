---
import "../styles/global.css";
---

<div class='menu'>
    <div class='button-box'>
        <button type='button' class='contact-button'>
            <span>&#10005;</span>
        </button>
    </div>
    <!-- <h1>Contact</h1>
    <form class='contact-form'>
        <input type='text' placeholder='name' />
        <input type='text' placeholder='email' />
        <textarea class='message' placeholder='message'></textarea>
    </form> -->
</div>
<div class='navbar'>
    <nav>
        <a href='/' class='home-link'>Home</a>
        <a href='/#about' class='about-link'>About</a>
        <a href='/blog' class='blog'>Blog</a>
        <a href='https://docs.google.com/document/d/1T9A2pb1RGfTqoq6sowurywKbvMh9e21s/edit' class='resume'>Resume</a>
        <!-- <button type='button' class='contact'>Contact</button> -->
    </nav>
</div>

<style>
    .menu h1 {
        text-align: center;
    }
    .button-box {
        width: 100%;
        display: flex;
        justify-content: flex-end;
    }
    .contact-button {
        background: none;
        color: inherit;
        border: none;
        padding: 0;
        font: inherit;
        cursor: pointer;
        outline: inherit;
        margin: 1rem 1rem 0.5rem 0;
        width: 2rem;
        height: 2rem;
        border-radius: 8px;
        background-color: rgb(100, 100, 100);
    }

    .menu {
        position: absolute;
        display: none;
        background-color: rgba(0, 0, 0, 0.9);
        width: 100%;
        height: 100vh;
        z-index: 999;
        padding: 2rem;
    }
    .expanded {
        display: unset;
    }
    .contact-form {
        height: 70%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        /* position: absolute; */
    }

    .message {
        min-height: 6rem;
    }

    .contact-form input,
    .contact-form textarea {
        background-color: unset;
        border: 1px solid rgb(142, 142, 142);
        border-radius: 4px;
        color: whitesmoke;
        padding: 0.5rem 1.5rem 0.5rem 1.5rem;
        margin-bottom: 1rem;
        width: 16rem;
    }

    .navbar {
        padding: 3rem 3rem 2rem 2rem;
        box-sizing: border-box;
        display: flex;
        flex-direction: row-reverse;
    }
    .navbar nav a {
        color: #d1d5db;
        text-decoration: none;
        font-size: 1.5rem;
    }

    .navbar nav button {
        background: none;
        color: inherit;
        border: none;
        padding: 0;
        font: inherit;
        font-size: 1.5rem;
        cursor: pointer;
        outline: inherit;
    }

    nav {
        display: flex;
        gap: 2rem;
    }
</style>
